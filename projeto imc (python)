peso = float(input("Digite o seu peso(KG): "))
altura = float(input("Digite a sua altura em metros : "))

imc = peso / altura**2

print("Seu IMC e %.2f" % imc)

if imc < 16:
    print("Magreza grave")
elif imc < 17:
    print("Magreza moderada") 
elif imc < 18.5:
    print("Magreza leve")
elif imc < 25:
    print("Saudavel")
elif imc < 30:
    print("Sobrepeso")
elif imc < 35:
    print("Obesidade nivel 1")
elif imc > 40:
    print("Obesidade nivel 2")
else:
    print("Obesidade nivel 3")
